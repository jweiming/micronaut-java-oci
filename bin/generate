#!/bin/sh

# Retrieve variable file
source ./vars

# Check if Micronaut is installed, otherwise install it


# Create Micronaut Java application
echo "[INFO]	Creating Micronaut Java application"
mn create-app $APPLICATION_NAME

# Generate the Wercker yml
echo "[INFO]	Generating yml file for Wercker" 
sed -e "s@<APPLICATION_NAME>@$APPLICATION_NAME@g" -e "s@<REPO_NAME>@$REPO_USERNAME@g" template/wercker.yml.template > $APPLICATION_NAME/wercker.yml

# Generate the Kubernetes yml
echo "[INFO]	Generating yml files for kubernetes"
mkdir $APPLICATION_NAME/oke
sed -e "s@<APPLICATION_NAME>@$APPLICATION_NAME@g" -e "s@<IMAGE_REPO>@$REPO_URL/$REPO_TENANCY/$APPLICATION_NAME:latest@g" template/oke/oke_deployment.yaml.template > $APPLICATION_NAME/oke/oke_deployment.yaml
sed "s/<APPLICATION_NAME>/$APPLICATION_NAME/g" template/oke/oke_service.yaml.template > $APPLICATION_NAME/oke/oke_service.yaml
