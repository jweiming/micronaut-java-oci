# ---------------------------------------------------------------------------------------------------------------------
# Environmental variables
# You probably want to define these as environmental variables.
# Instructions on that are here: https://github.com/cloud-partners/oci-prerequisites
# ---------------------------------------------------------------------------------------------------------------------

variable "compartment_ocid" {
  default="ocid1.compartment.oc1..aaaaaaaa4h4mgml76njnp3mnwi2nxrlkoeopkpoddr32neb4r3ta3xyrr6la"
}

# Required by the OCI Provider
variable "tenancy_ocid" {
  default="ocid1.tenancy.oc1..aaaaaaaa6kxbn3rz7cv3l5rbf5nvkptu2k7ly3wwgqsmfowonkbgyp26267q"
}

variable "user_ocid" {
  default="ocid1.user.oc1..aaaaaaaajdwm2uperevcqupyj6lndes6eda5am2e47amjkwb3ymqu5kewkia"
}
variable "fingerprint" {
  default= "24:0d:4f:89:19:0c:bd:a6:db:67:e1:1e:87:6a:37:74"
}

variable "private_key_path" {
  default="/home/opc/.oci/oci_api_key.pem"
}

variable "region" {
  default="us-phoenix-1"
}

# Key used to SSH to OCI VMs
variable "ssh_public_key" {
  default="/home/opc/dev/oci-bootstrap/oke-quickstart/oke-keys/oke_rsa_keys.pub"
}

variable "ssh_private_key" {
  default="/home/opc/dev/oci-bootstrap/oke-quickstart/oke-keys/oke_rsa_keys"
}


# ---------------------------------------------------------------------------------------------------------------------
# Optional variables
# The defaults here will give you a cluster.  You can also modify these.
# ---------------------------------------------------------------------------------------------------------------------

variable "oke" {
  type = "map"

  default = {
    name             = "OKE"
    shape            = "VM.Standard2.2"
    nodes_per_subnet = 1
  }
}
